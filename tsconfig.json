{
  "compilerOptions": {
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./global.d.ts"]
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules/**/*"]
}
